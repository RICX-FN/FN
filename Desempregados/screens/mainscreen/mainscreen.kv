<MainScreen>
    MDFloatLayout:
        padding: 5
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size

        MDRelativeLayout:
            MDIconButton:
                icon: "chevron-left"
                halign: "left"
                size_hint: None, None
                size: "50dp", "50dp"
                pos_hint: {"center_x": 0.07, "center_y": 0.94}
                on_release: root.back_login_cli()

            MDTextField: 
                hint_text: "Busca"
                font_name: "fonts\Kanit_PT_Serif_Roboto\Roboto\Roboto-Light.ttf"
                mode: "rectangle"
                icon_right: "magnify"
                pos_hint: {"center_x": 0.41, "center_y": 0.86}
                size_hint: 0.73, 0.1
                height: 50

            MDIconButton:
                icon: ""
                halign: "left"
                size_hint: None, None
                size: "50dp", "50dp"
                pos_hint: {"center_x": 0.89, "center_y": 0.86}
                on_release: # entrar no perfil do cliente

            FitImage:
                id: img-perfil
                source: "img/user.png"
                size_hint: None, None
                radius: dp(75)
                size: dp(52), dp(52)
                pos_hint: {"center_x": 0.89, "center_y": 0.85}

            MDLabel:
                text: "Postagens"
                halign: "left"
                bold: True
                font_size: "27"
                pos_hint: {"center_x": 0.56, "center_y": 0.78}

            MDCard:
                size_hint: 0.92, None
                pos_hint: {"center_x": 0.5, "center_y": 0.63}
                size: 200, 150
                md_bg_color: (0.95, 0.95, 0.95, 1)
                radius: [15, 15, 15, 15]  # Arredondamento das bordas
                elevation: 0