<LoginScreenCli>
    MDFloatLayout:
        padding: 5
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size

        MDRelativeLayout:
            MDIconButton:
                icon: "chevron-left"
                halign: "left"
                size_hint: None, None
                size: "50dp", "50dp"
                pos_hint: {"center_x": 0.07, "center_y": 0.93}
                on_release: root.back_choosescreen()

        MDLabel:
            text: "Login"
            halign: "center"
            bold: True
            theme_text_color: "Primary"
            font_size: "27"
            pos_hint: {"center_x": 0.5, "center_y": 0.85}

        MDTextField: 
            hint_text: "Nome Completo"
            font_name: "fonts\Kanit_PT_Serif_Roboto\Roboto\Roboto-Light.ttf"
            mode: "rectangle"
            icon_right: "account"
            pos_hint: {"center_x": 0.5, "center_y": 0.70}
            size_hint: 0.9, None
            height: 50

        MDTextField: 
            hint_text: "Email"
            font_name: "fonts\Kanit_PT_Serif_Roboto\Roboto\Roboto-Light.ttf"
            mode: "rectangle"
            icon_right: "email"
            pos_hint: {"center_x": 0.5, "center_y": 0.59}
            size_hint: 0.9, None
            height: 50

        MDTextField: 
            hint_text: "Palavra-passe"
            font_name: "fonts\Kanit_PT_Serif_Roboto\Roboto\Roboto-Light.ttf"
            mode: "rectangle"
            text_color: app.theme_cls.primary_color 
            password: True
            icon_right: "lock"
            pos_hint: {"center_x": 0.5, "center_y": 0.49}
            size_hint: 0.9, None
            height: 50
            fill_color: 1, 1, 1, 1
            text_color: 0, 0, 0, 1

        MDFillRoundFlatButton:
            text: "Conecte-se"
            font_name: "fonts\Kanit_PT_Serif_Roboto\Roboto\Roboto-Light.ttf"
            elavation: 1
            font_size: 18
            text_color: "black"
            size_hint: 0.9, None
            pos_hint: {"center_x": 0.5, "center_y": 0.38}
            on_release: #

        MDLabel:
            text: " Entrar com Google"
            font_name: "fonts\Kanit_PT_Serif_Roboto\Roboto\Roboto-Light.ttf"
            halign: "center"
            font_size: "16"
            pos_hint: {"center_x": 0.5, "center_y": 0.28}

        MDRectangleFlatIconButton:
            text: "Google"
            font_name: "fonts\Kanit_PT_Serif_Roboto\Roboto\Roboto-Light.ttf"
            icon: "google" 
            pos_hint: {"center_x": 0.5, "center_y": 0.21}
            md_bg_color: 1, 1, 1, 1 
            text_color: 0.2, 0.2, 0.2, 1
            icon_color: "black"