<LoginScreenEmp>
    MDFloatLayout:
        padding: 5
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size

        MDRelativeLayout:
            MDIconButton:
                icon: "chevron-left"
                halign: "left"
                size_hint: None, None
                size: "50dp", "50dp"
                pos_hint: {"center_x": 0.07, "center_y": 0.93}
                on_release: root.back_choosescreen()

        MDLabel:
            text: "Cadastre-se"
            halign: "center"
            bold: True
            theme_text_color: "Primary"
            font_size: "27"
            pos_hint: {"center_x": 0.5, "center_y": 0.85}

        MDTextField: 
            hint_text: "Nome Completo"
            font_name: "fonts\Kanit_PT_Serif_Roboto\Roboto\Roboto-Light.ttf"
            mode: "rectangle"
            icon_right: "account"
            pos_hint: {"center_x": 0.5, "center_y": 0.70}
            size_hint: 0.9, None
            height: 50

        MDTextField: 
            hint_text: "Email"
            font_name: "fonts\Kanit_PT_Serif_Roboto\Roboto\Roboto-Light.ttf"
            mode: "rectangle"
            icon_right: "email"
            pos_hint: {"center_x": 0.5, "center_y": 0.59}
            size_hint: 0.9, None
            height: 50

        MDTextField: 
            hint_text: "Palavra-passe"
            font_name: "fonts\Kanit_PT_Serif_Roboto\Roboto\Roboto-Light.ttf"
            mode: "rectangle"
            text_color: app.theme_cls.primary_color 
            password: True
            icon_right: "lock"
            pos_hint: {"center_x": 0.5, "center_y": 0.48}
            size_hint: 0.9, None
            height: 50
            fill_color: 1, 1, 1, 1
            text_color: 0, 0, 0, 1

        MDFillRoundFlatButton:
            text: "Conecte-se"
            font_name: "fonts\Kanit_PT_Serif_Roboto\Roboto\Roboto-Light.ttf"
            font_size: 16
            text_color: "black"
            size_hint: 0.9, None
            pos_hint: {"center_x": 0.5, "center_y": 0.37}
            on_release: root.opc_login()

        MDLabel:
            text: "Já possui uma conta?"
            halign: "left"
            bold: False
            theme_text_color: "Primary"
            font_size: "14"
            pos_hint: {"center_x": 0.55, "center_y": 0.30}

        MDFillRoundFlatButton:
            text: "Faça login"
            font_name: "fonts\Kanit_PT_Serif_Roboto\Roboto\Roboto-Regular.ttf"
            font_size: 14
            text_color: "blue"
            md_bg_color: 0, 0, 0, 0  # Fundo completamente transparente
            ripple_behavior: False  # Remove o efeito de onda ao pressionar
            hover_behavior: False  # Desativa o efeito ao passar o mouse (no desktop)
            size_hint: 0.3, None
            pos_hint: {"center_x": 0.47, "center_y": 0.30}
            on_release: root.login()