<PerfilEmp>
    MDFloatLayout:
        padding: 5
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size

        MDRelativeLayout:
            MDIconButton:
                icon: "chevron-left"
                halign: "left"
                size_hint: None, None
                size: "50dp", "50dp"
                pos_hint: {"center_x": 0.07, "center_y": 0.97}
                on_release: root.back_login_emp()

            MDRelativeLayout:
                FitImage:
                    id: img
                    source: "img/empresa.png"
                    size_hint: None, None
                    size: dp(110), dp(110)
                    pos_hint: {"center_x": 0.5, "center_y": 0.84}

            MDLabel:
                id: NomeEmpresa
                text: "Empresa".upper()
                font_size: 22
                bold: True
                pos_hint: {"center_x": 0.95, "center_y": 0.9}

            MDLabel:
                id: NumeroEmpresa
                text: "Telefone"
                font_size: 16
                bold: False
                pos_hint: {"center_x": 0.95, "center_y": 0.86}

            MDLabel:
                id: Cidade
                text: "Cidade"
                font_size: 16
                bold: False
                pos_hint: {"center_x": 0.95, "center_y": 0.83}

            MDLabel:
                id: Area
                text: "Area"
                font_size: 16
                bold: False
                pos_hint: {"center_x": 0.95, "center_y": 0.80}

            MDLabel:
                id: EmailEmpresa
                text: "Email"
                font_size: 16
                bold: False
                pos_hint: {"center_x": 0.95, "center_y": 0.77}

            MDFillRoundFlatButton:
                text: "Editar perfil"
                font_size: "20"
                elavation: 1
                text_color: "black"
                size_hint: 0.9, 0
                pos_hint: {"center_x": 0.5, "center_y": 0.7}
                on_release: #root.opc_edit_perfil()

