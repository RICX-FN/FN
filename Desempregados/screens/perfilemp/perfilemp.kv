<PerfilEmp>
    MDFloatLayout:
        padding: 5
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size

        MDRelativeLayout:

            MDRelativeLayout:
                # fundo do banner
                FitImage:
                    id: img
                    #source: "img/fundo-img.jpg"
                    size_hint: 1, None
                    radius: dp(25)
                    size: dp(40), dp(400)
                    pos_hint: {"center_x": 0.5, "center_y": 0.95}

                # fundo da img de perfil
                FitImage:
                    id: img
                    source: "img/fundo.jpeg"
                    size_hint: None, None
                    radius: dp(75)
                    size: dp(105), dp(105)
                    pos_hint: {"center_x": 0.5, "center_y": 0.86}

                # img de perfil
                FitImage:
                    id: img
                    source: "img/user.png"
                    size_hint: None, None
                    radius: dp(75)
                    size: dp(105), dp(105)
                    pos_hint: {"center_x": 0.5, "center_y": 0.86}
                    

                # fundo usado como form (box-content)
                FitImage:
                    id: img
                    source: "img/fundo-img.jpg"
                    size_hint: (0.9, None)
                    radius: dp(15)
                    size: dp(240), dp(47)
                    pos_hint: {"center_x": 0.5, "center_y": 0.20}

                # img icon de importar
                FitImage:
                    id: img
                    source: "img/carregar-arquivo.png"
                    size_hint: (None, None)
                    radius: dp(10)
                    size: dp(30), dp(30)
                    pos_hint: {"center_x": 0.16, "center_y": 0.20}

            MDIconButton:
                icon: "chevron-left"
                halign: "left"
                size_hint: None, None
                size: "50dp", "50dp"
                pos_hint: {"center_x": 0.07, "center_y": 0.94}
                on_release: root.back_login_emp()

            MDLabel:
                id: NomeEmpresa
                font_name: "fonts\Kanit_PT_Serif_Roboto\Roboto\Roboto-Light.ttf"
                text: "Empresa".upper()
                halign: "center"
                font_size: 22
                bold: False
                pos_hint: {"center_x": 0.5, "center_y": 0.75}

            MDFillRoundFlatButton:
                text: "Editar Perfil"
                font_name: "fonts\Kanit_PT_Serif_Roboto\Roboto\Roboto-Light.ttf"
                font_size: "18"
                #md_bg_color: 0.9, 0.9, 0.9, 1
                text_color: "black"
                size_hint: 0.78, None
                pos_hint: {"center_x": 0.43, "center_y": 0.70}
                on_release: #root.opc_edit_perfil()

            MDIconButton:
                icon: "bell-outline"
                size_hint: None, None
                size: "70dp", "70dp"
                pos_hint: {"center_x": 0.9, "center_y": 0.70}
                on_release:

            MDTextField: 
                hint_text: "Àrea de atuação"
                font_name: "fonts\Kanit_PT_Serif_Roboto\Roboto\Roboto-Light.ttf"
                mode: "rectangle"
                multiline: True
                pos_hint: {"center_x": 0.5, "center_y": 0.57}
                size_hint: 0.9, None
                color: "black"
                height: 50

            MDTextField: 
                hint_text: "Nº Vagas"
                font_name: "fonts\Kanit_PT_Serif_Roboto\Roboto\Roboto-Light.ttf"
                mode: "rectangle"
                multiline: True
                pos_hint: {"center_x": 0.22, "center_y": 0.47}
                size_hint: 0.33, None
                color: "black"
                height: 50

            MDTextField: 
                hint_text: "Data (DD-MM-YYYY)"
                font_name: "fonts\Kanit_PT_Serif_Roboto\Roboto\Roboto-Light.ttf"
                mode: "rectangle"
                multiline: True
                pos_hint: {"center_x": 0.69, "center_y": 0.47}
                size_hint: 0.52, None
                color: "black"
                height: 50

            MDTextField: 
                hint_text: "Descrição"
                font_name: "fonts\Kanit_PT_Serif_Roboto\Roboto\Roboto-Light.ttf"
                mode: "rectangle"
                multiline: True
                pos_hint: {"center_x": 0.5, "center_y": 0.34}
                size_hint: 0.9, 0.15
                color: "black"
                height: 50

            MDLabel:
                text: "Carregar Modelo CV"
                font_name: "fonts\Kanit_PT_Serif_Roboto\Roboto\Roboto-Light.ttf"
                halign: "center"
                font_size: 16
                bold: False
                size_hint: 0.9, None
                pos_hint: {"center_x": 0.51, "center_y": 0.20} 

            MDIconButton:
                icon: "plus"
                size_hint: None, None
                size: "50dp", "50dp"
                pos_hint: {"center_x": 0.85, "center_y": 0.20}
                on_release: 

            MDFillRoundFlatButton:
                text: "Publicar"
                font_name: "fonts\Kanit_PT_Serif_Roboto\Roboto\Roboto-Light.ttf"
                icon_right: "email"
                font_size: "18"
                text_color: "black"
                size_hint: 0.9, None
                pos_hint: {"center_x": 0.5, "center_y": 0.11}
                on_release: #root.opc_edit_perfil()

