<PerfilEmp>
    MDFloatLayout:
        padding: 5
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size

        MDRelativeLayout:
            MDIconButton:
                icon: "chevron-left"
                halign: "left"
                size_hint: None, None
                size: "50dp", "50dp"
                pos_hint: {"center_x": 0.07, "center_y": 0.97}
                on_release: root.back_login_emp()

            MDRelativeLayout:
                FitImage:
                    id: img
                    source: "img/fundo-img.jpg"
                    size_hint: None, None
                    radius: dp(75)
                    size: dp(121), dp(121)
                    pos_hint: {"center_x": 0.5, "center_y": 0.84}


                FitImage:
                    id: img
                    source: "img/user.png"
                    size_hint: None, None
                    radius: dp(75)
                    size: dp(120), dp(120)
                    pos_hint: {"center_x": 0.5, "center_y": 0.84}

            MDLabel:
                id: NomeEmpresa
                text: "Empresa".upper()
                halign: "center"
                font_size: 22
                bold: True
                pos_hint: {"center_x": 0.5, "center_y": 0.71}

            MDFillRoundFlatButton:
                text: "Editar Perfil"
                font_size: "18"
                elavation: 1
                text_color: "black"
                size_hint: 0.9, None
                pos_hint: {"center_x": 0.5, "center_y": 0.65}
                on_release: #root.opc_edit_perfil()


